- title "#{@answer.title}"
- keywords "#{@answer.title}"
- head_desc "#{@answer.title}"
- path(@path)
- mobile_url("http://www.vxixi.com#{@path}")

%section.container
  .row
    .col-md-2.hidden-sm.hidden-xs
      .affix{style: "word-wrap: break-word; width: 160px"}
        %div{style:"border:1px solid #e5e5e5;padding:5px;background-color:#f7f7f7"}
          %p
            %a{href: "/en/answer/"} Badminton Q&A
          - @articles.each do |article|
            %p.small
              %a{href: "/en/answer/#{article.id}/"} #{article.title}
    %article.col-md-8.col-sm-12
      %ol.breadcrumb.hidden-xs.hidden-sm
        %li
          %a{href: "/"} Home
        %li
          %a{href: "/en/answer/"} Q & A
        %li.active #
        %span.active{style: "float: right"} Updated #{@answer.updated_at.strftime("%Y-%m-%d %H:%M")}
      = @answer.html.html_safe
      .col-md-12
      - @products.each do |product|
        .col-md-3.col-sm-6.col-xs-6{style: "background-color: #fff;border: 1px solid #eee;"}
          %a{href: "javascript:;", title: "#{product.title}", onclick: "open_product_link(#{product.source_id});"}
            %img{src: "#{product.pic}", alt: "#{product.title}", style: "width:100%;padding: 20px;"}
            %p{style: "overflow:hidden;height:60px;color: #666;"}
              #{product.title}
              %br
              %span.small{style: "color: red;"} $#{product.o_price}
      .clearfix

      .page-header
      %p.desc
        - if @pre
          %a{href: "/en/answer/#{@pre.id}/"}  Pre：#{@pre.title}
          %br
        - if @next
          %a{href: "/en/answer/#{@next.id}/"} Next：#{@next.title}

      #toTop ^
      .page-header
      .fb-comments{data:{href: "http://www.vxixi.com#{@path}", numposts: "10", width: "100%"}}
      .page-header

    %aside
      = render partial: "layouts/ad_right_en" 
:javascript
  var open_product_link = function(id){
    window.open("http://c.zhequan.cc/e_detail/" + id, "_blank").focus();
  };
