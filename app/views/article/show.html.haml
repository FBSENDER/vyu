- title "#{@article.title}"
- keywords "#{@article.keywords}"
- head_desc "#{@article.description}"

%section.container
  .row
    %article.col-md-9.col-sm-12
      - @contents.each do |content|
        - if content["type"] == 11
          %h1.title.page_header #{content["h1_content"]}
        - elsif content["type"] == 12
          %h2.title #{content["h2_content"]}
        - elsif content["type"] == 2
          %p.desc #{content["text_content"]}
        - elsif content["type"] == 1
          %img.img-responsive.center-block{src: "http://www.vxixi.com/proxy/#{URI.encode(content["image_url"].gsub('http://',''))}", alt: "#{content['image_desc']}", src: "http://www.vxixi.com/proxy/#{content['image_url'].gsub('http://','')}"}
          - unless content['image_desc'].empty?
            %br
            %p.small.text-center 
              %span.glyphicon.glyphicon-minus
              #{content['image_desc']}

    %aside.col-md-3.col-sm-12
      .row
        %h3.title.page-header 更多文章
        - @articles.each do |article|
          %p
            %a{href: "/article/#{article.id}/"} #{article.title}

